{
    "name": "karbowiak/hetznerascode",
    "description": "HaC is a tool that can be used to work with Hetzner Cloud",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Michael Karbowiak",
            "email": "michael@karbowiak.dk"
        }
    ],
    "autoload": {
        "psr-4": {
            "Hac\\": "app/"
        },
        "files": []
    },
    "require": {
        "php": "^8.0",
        "ext-json": "*",
        "league/container": "*",
        "lkdevelopment/hetzner-cloud-php-sdk": "*",
        "new3den/console": "*",
        "symfony/yaml": "*",
        "tightenco/collect": "*",
        "vlucas/phpdotenv": "*"
    },
    "require-dev": {
        "roave/security-advisories": "dev-master@dev",
        "phpunit/phpunit": "*",
        "symfony/var-dumper": "*",
        "friendsofphp/php-cs-fixer": "*"
    },
    "bin": [
        "bin/hac"
    ],
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        }
    }
}
